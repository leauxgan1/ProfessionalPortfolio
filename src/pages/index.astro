<style>
  :root {
    --landing-h1-final-x: 90%;
    --landing-h2-final-x: 55%;
  }

	html, body { 
      scroll-behavior: smooth;
  }

  .buffer {
    position: relative;
    min-height: 60rem;
    width: 100%;
    background-image: linear-gradient(0.50turn,rgb(100,50,50),rgb(50,50,100));
    opacity: 1;
  }
	main {
		margin: auto;
		width: 1000px;
		max-width: calc(100% - 2rem);
		padding: 1rem;
		color: white;
		font-size: 20px;
		line-height: 1.6;
		background-color: rgb(21, 21, 21);
	}

	h1 {
		font-size: 3rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}
  h2 {
		font-size: 2rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
  }

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}

	.section {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1rem;
		border-radius: 8px;
		text-align: center;
	}

	.section code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}

	.section strong {
		color: rgb(var(--accent-light));
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}

	.nav-container {
    position:fixed;
		display: flex;
		flex-direction: row nowrap;
		justify-items: stretch;
		align-items: stretch;
		justify-content: center;
    width: 100%;
    height: 4rem;
		z-index: 1;
    background-color: rgba(40,200,70,1);
	}


	
	

	@keyframes horizontal-swipe-upper {
		from {
			opacity: 0;
			transform: translateX(-10%);
		}
		to {
			
			opacity: 1;
      transform: translateX(var(--landing-h1-final-x));
		}
	}

	@keyframes horizontal-swipe-lower {
		from {
			opacity: 0;
			transform: translateX(-10%);
		}
		to {
			
			opacity: 1;
      transform: translateX(var(--landing-h2-final-x));
		}
	}

	.landing-text-h1 {
    position: absolute;
		transform: translateX(var(--landing-h1-final-x));
    top: 10%;
		animation-name: horizontal-swipe-upper;
		animation-duration: 1s;
		animation-timing-function: cubic-bezier(0.25,1,0.5,1);
	}
	
	.landing-text-h2 {
    position: absolute;
    top: 20%;
		transform: translateX(var(--landing-h2-final-x));
		animation-name: horizontal-swipe-lower;
		animation-duration: 1s;
		animation-timing-function: cubic-bezier(0.25,1,0.5,1);
	}

	.section-container {
		scroll-behavior: smooth !important;
	}
</style>
