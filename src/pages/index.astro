---
import Layout from '../layouts/Layout.astro';
import Card from '../components/Card.astro';
import NavItem from '../components/NavItem.astro';
---

<Layout title="Portfolio - Logan Langdon">
	<main>
		<nav class="nav-container">
			<!-- Include dark mode toggle -->
			<nav class="nav-buttons">
				<NavItem 
					topic="Home"
					href="./"
				/>
				<NavItem 
					topic="About" 		
					href="_blank"
				/>
				<NavItem 
					topic="Projects" 	
					href="_blank"
				/>
				<NavItem 
					topic="Skills" 	
					href="_blank"
				/>
				<NavItem 
					topic="Contact" 	
					href="_blank"
				/>
			</nav>
		</nav>
		<h1>Hello there!</h1>
		<p class="instructions">
			About
		</p>
		<p class="instructions">
			Skills
		</p>
		<p class="instructions">
			Projects
		</p>
		<ul role="list" class="link-card-grid"></ul>
			<Card
				href="https://docs.astro.build/"
				title="Project 1"
				body="Go Rest API"
			/>
			<Card
				href="https://docs.astro.build/"
				title="Project 2"
				body="Notetaking UI"
			/>
		</ul>
		<p class="instructions"></p>
			Contact
		</p>
		<h2>
			
		</h2>
	</main>
</Layout>

<style>
	main {
		margin: auto;
		padding: 1rem;
		width: 800px;
		max-width: calc(100% - 2rem);
		color: white;
		font-size: 20px;
		line-height: 1.6;
		/*background-color: rgb(255,0,0);*/
	}

	h1 {
		font-size: 4rem;
		font-weight: 700;
		line-height: 1;
		text-align: center;
		margin-bottom: 1em;
	}

	.text-gradient {
		background-image: var(--accent-gradient);
		-webkit-background-clip: text;
		-webkit-text-fill-color: transparent;
		background-size: 400%;
		background-position: 0%;
	}

	.instructions {
		margin-bottom: 2rem;
		border: 1px solid rgba(var(--accent-light), 25%);
		background: linear-gradient(rgba(var(--accent-dark), 66%), rgba(var(--accent-dark), 33%));
		padding: 1.5rem;
		border-radius: 8px;
	}

	.instructions code {
		font-size: 0.8em;
		font-weight: bold;
		background: rgba(var(--accent-light), 12%);
		color: rgb(var(--accent-light));
		border-radius: 4px;
		padding: 0.3em 0.4em;
	}

	.instructions strong {
		color: rgb(var(--accent-light));
	}

	.link-card-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(24ch, 1fr));
		gap: 2rem;
		padding: 0;
	}

	.nav-container {

	}

	.nav-buttons {
		margin:auto;
		display: flex;
		flex-direction: row nowrap;
		width: 25rem;
		justify-content: center;
		justify-items: stretch;
		flex-basis: auto;
		gap: 0.25rem;
		background-color: rgb(1, 50, 9);
		border-radius: 25px;
		border: 0.15rem solid rgb(var(--accent));
		padding: 0.25rem;
	}
</style>
