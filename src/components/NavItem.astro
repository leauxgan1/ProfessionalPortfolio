---
interface Props {
    topic: string,
    href: string,
}

const {topic, href} = Astro.props;
---

<a href={href}>
    {topic}
</a>

<style>
    a {
        color: inherit;
        text-decoration: none;
        /* background-color: rgb(0, 87, 58); */
        font-size: 1rem;
        border-radius: 25px;
        text-align: center;
        flex-basis: 100%;
        flex-wrap: nowrap;
        /* padding: 0 0.25rem 0 0.25rem; */
        transition: background-color 0.5s cubic-bezier(0.5,1,0.5,1);
        transition: opacity 0.5s cubic-bezier(0.5,1,0.5,1);
        opacity: 0.75;
    }
    a:is(:hover,:focus-within) {
        background-color: rgb(var(--accent-dark));
        opacity: 1;
    }
</style>
